{
    "ts-node": {
        "transpileOnly": true
    },
    "compilerOptions": {
        "esModuleInterop": true,
        "moduleResolution": "node",
        "target": "es6",
        "allowJs": true,
        "checkJs": false,
        "outDir": "./dist",
        "module": "commonjs",
        "jsx": "react",
        "baseUrl": "./src",
        "paths": {
            "@core/*": ["core/*"],
            "@pages/*": ["pages/*"],
            "@atoms/*": ["core/atoms/*"]
        }
    },
    "include": ["src/**/*", "server/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.js"]
}
