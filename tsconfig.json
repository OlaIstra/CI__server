{
    "compilerOptions": {
        "esModuleInterop": true,
        "allowJs": true,
        "checkJs": false,
        "outDir": "./dist",
        "module": "commonjs",
        "jsx": "react",
        "baseUrl": "./",
        "paths": {
            "@core/*": ["src/core/*"],
            "@pages/*": ["src/pages/*"],
            "@atoms/*": ["src/core/atoms/*"],
            "@server/*": ["server/*"]
        },
        "plugins": [{ "transform": "typescript-transform-paths" }]
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.test.js",
        "./webpack.config.js"
    ]
}
