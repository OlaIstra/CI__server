{
	"compilerOptions": {
        "esModuleInterop": true,
        "allowJs": true,
        "checkJs": false,
        "outDir": "./dist",
		"module": "commonjs",
		"jsx": "react",
		"baseUrl": "./src",
		"paths": {
			"@core/*": ["core/*"],
			"@pages/*": ["pages/*"],
			"@atoms/*": ["core/atoms/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts", "**/*.test.js"]
}
