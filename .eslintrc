{
	"parser": "babel-eslint",
	"env": {
		"es6": true,
		"browser": true,
		"node": true
	},
	"rules": {
		"comma-dangle": ["error", "always"],
		"indent": ["error", "tab"],
		"no-cond-assign": ["error", "always"],

		"init-declarations": ["error", "always"],
		"no-console": "off",
		"no-inline-comments": "off"
	}
}
